<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.malarska"/>
    <context:property-placeholder location="classpath:castle.properties"/>


    <bean id="castle" class="com.malarska.knightsgame.domain.Castle" init-method="build" destroy-method="tearDown">
        <constructor-arg index="0" ref="knight"/>
        <property name="name" value="${my.castle.name:West GateXML}"/>
    </bean>
</beans>